<article style="width: 79%; background: #e5e5e5; padding: 85px 0 0 25px">
    <section class="broadcramp">
      <nav
        style="
          --bs-breadcrumb-divider: url(
            &#34;data:image/svg + xml,
            %3Csvgxmlns='http://www.w3.org/2000/svg'width='8'height='8'%3E%3Cpathd='M2.5 0L1 1.5 3.5 4 1 6.5 2.5 8l4-4-4-4z'fill='currentColor'/%3E%3C/svg%3E&#34;
          );
        "
        aria-label="breadcrumb"
      >
        <ol class="breadcrumb" style="font-size: 14px">
          <li class="breadcrumb-item">
            <a href="/" style="text-decoration: none; color: black">Home</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/" style="text-decoration: none; color: black">List Car</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/" style="text-decoration: none; color: black"
              >Add New Car</a
            >
          </li>
        </ol>
      </nav>
    </section>
  
    <h1 class="mt-4 mb-3 fw-bold" style="font-size: 20px">Update Car</h1>
  
    <section
      style="background: #ffffff; padding: 20px; border-radius: 8px; width: 100%"
    >
      <form action="/edit/<%= car ? car._id : '' %>" method="PUT">
        <div class="row mb-3">
          <label for="name" class="col-sm-2 col-form-label">Nama Mobil:</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= cars ? cars.name : '' %>"
            />
          </div>
        </div>
        <div class="row mb-3">
          <label for="price" class="col-sm-2 col-form-label">Harga:</label>
          <div class="col-sm-10">
            <input 
              type="number" 
              class="form-control" 
              id="price" 
              name="price"
              value="<%= car ? car.price : '' %>"
            />
          </div>
        </div>
        <div class="row mb-3">
          <label for="size" class="col-sm-2 col-form-label">Ukuran:</label>
          <div class="col-sm-10">
            <select class="form-select" id="size" name="size">
              <option value="small" <%= car && car.size === 'small' ? 'selected' : '' %>>Small</option>
              <option value="medium" <%= car && car.size === 'medium' ? 'selected' : '' %>>Medium</option>
              <option value="large" <%= car && car.size === 'large' ? 'selected' : '' %>>Large</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
          </div>
        </div>
      </form>
    </section>
  </article>  